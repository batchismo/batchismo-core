{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Batchismo",
  "version": "0.3.2",
  "identifier": "dev.batchismo.desktop",
  "build": {
    "frontendDist": "ui/dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "cargo build -p bat-agent && node ../bat-shell/scripts/stage-sidecar.mjs dev && npm run dev --prefix bat-shell/ui",
    "beforeBuildCommand": "npm run build --prefix bat-shell/ui"
  },
  "app": {
    "windows": [
      {
        "title": "Batchismo",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "publisher": "Vatch√© Chamlian",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "resources": [],
    "externalBin": ["binaries/bat-agent"]
  }
}
